<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brookswebpro.bjbrooks.fibonaccinumbers.MainActivity"
    android:background="@drawable/fib_background"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <EditText
        android:id="@+id/numberEntered"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_above="@+id/chalkboard"
        android:layout_alignEnd="@+id/fibTesterButton"
        android:layout_alignLeft="@+id/fibTesterButton"
        android:layout_alignRight="@+id/fibTesterButton"
        android:layout_alignStart="@+id/fibTesterButton"
        android:layout_marginBottom="20dp"
        android:background="#FDFEFE"
        android:ems="10"
        android:hint="Enter number"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <Button
        android:id="@+id/fibTesterButton"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/chalkboard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="fibTester"
        android:text="Is It a Fibonacci #?"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/chalkboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/fib_chalkboard"
        app:srcCompat="@drawable/chalkboard_small" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="180dp"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="casual"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/fibTesterButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:onClick="goToSequenceGenerator"
        android:text="Go to Sequence Generator"
        android:textSize="10sp" />

</android.widget.RelativeLayout>
