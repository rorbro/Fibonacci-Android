<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fib_background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.brookswebpro.fibonaccinumbers.MainActivity">

    <EditText
        android:id="@+id/numberEntered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fibTesterButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="#FDFEFE"
        android:ems="10"
        android:hint="Enter number"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="36sp" />

    <Button
        android:id="@+id/fibTesterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/chalkboard"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:onClick="fibTester"
        android:text="Is It a Fibonacci #?"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/chalkboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/chalkboard_xlarge" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="570dp"
        android:layout_height="330dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chalkboard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:onClick="goToSequenceGenerator"
        android:text="Go to Sequence Generator"
        android:textSize="30sp" />

</android.widget.RelativeLayout>
